<FirstScreen>:
    GridLayout:
        cols: 1
        padding:10
        spacing:10
        Camera:
            id : cam
            resolution: (640, 480)
            play: False
            size_hint_y: 0.8
            opacity: 0
        Button:
            id: ss
            size_hint_y: 0.1
            text:'Start'
            on_press: root.start_stop_cam()
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'
        Button:
            id:cap
            size_hint_y: 0.1
            text:'Capture'
            on_press:root.capture()
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'
<SecondScreen>:
    GridLayout:
        padding:10
        spacing:10
        cols: 1
        Image:
            size_hint_y: 0.5
            id: img

        Button:
            on_press: root.create_link()
            size_hint_y:0.1
            text:'Create link'
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'
        Label:
            id: link
            size_hint_y:0.1
        GridLayout:
            cols: 2
            size_hint_y:0.2
            Button:
                text:'copy link'
                on_press: root.copy()
                background_normal: 'images/normal.png'
                background_down: 'images/down.png'
            Button:
                text: 'open link'
                on_press: root.open_link()
                background_normal: 'images/normal.png'
                background_down: 'images/down.png'
        Button:
            size_hint_y: 0.1
            id: back
            text: 'Back to camera'
            on_press: root.back_to_cam()
            background_normal: 'images/normal.png'
            background_down: 'images/down.png'

<RootWidget>:
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: root.pos
            size: root.size
    FirstScreen:
        id: first_screen
        name: 'first_screen'
    SecondScreen:
        id: second_screen
        name: 'second_screen'